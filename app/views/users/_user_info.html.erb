<div class="user-info text-center">
  <div id=user-avatar>
    <% if current_user.pudo %>
      <%= cl_image_tag("pudo_o65w0k", alt: "pudo-image", :width => 50, :height => 50, crop: "fill", class: "avatar-bordered")%>
    <% else %>
      <%= cl_image_tag("bike_in7fcz", alt: "runner-image", :width => 50, :height => 50, crop: "fill", class: "avatar-bordered")%>
    <% end %>
  </div>
  <div id= user-info >
    <%= current_user.email%>
    <% if current_user.pudo %>
      <p>Point relais de <%= current_user.pudo_city %></p>
    <% else %>
      <p>Runner</p>
    <% end %>
  </div>
</div>
