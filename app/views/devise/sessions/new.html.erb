<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= t('.sign_in', :default => "Sign in") %></h2>

      <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <div class="form-group"><%= f.label :email %><br />
        <%= f.email_field :email, class:"form-control" %></div>

        <div class="form-group"><%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control" %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit t('.sign_in', :default => "Sign in") %></div>
      <% end %>

      <%= render "devise/shared/links" %>

   </div>
  </div>
</div>
