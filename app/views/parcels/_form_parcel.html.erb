<%= simple_form_for (parcel) do |f|%>
  <%= f.input :sender_first_name, label: "Prénom de l'expéditeur", placeholder:"ex: Didier" %>
  <%= f.input :sender_last_name, label: "Nom de l'expéditeur", placeholder: "ex: Drogba" %>
  <%= f.input :sender_phone, label: "Tel de l'expéditeur", placeholder:"ex: 0522657645" %>
  <%= f.input :receiver_first_name, label: "Prénom du destinataire", placeholder:"ex: Jennifer" %>
  <%= f.input :receiver_last_name, label: "Nom du destinataire", placeholder: "ex: Lopez" %>
  <%= f.input :receiver_phone, label: "Tel du destinataire", placeholder:"ex: 0623862346" %>

  <%= f.association :destination, label: "Destination", collection: pudo_list, label_method: :pudo_city, value_method: :id, include_blank: false  %>
  <!-- <div id="error-title" class="hidden" style="color:#800000;">
    <p>
       #I18n.t(".missions.error-title")
    </p>
  </div> -->

  <div class="text-center">
    <%= f.button :submit, "Créer Colis", class:'btn navbar-wagon-button'%>
  </div>
<%end%>
