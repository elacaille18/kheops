<%= simple_form_for (parcel) do |f|%>
  <%= f.input :sender_first_name, label: "Prénom de l'expéditeur", placeholder:"ex: Jean" %>
  <%= f.input :sender_last_name, label: "Nom de l'expéditeur", placeholder: "ex: Michot" %>
  <%= f.input :sender_phone, label: "Numéro de portable de l'expéditeur" %>
  <%= f.input :receiver_first_name, label: "Prénom du receveur", placeholder:"ex: Michel" %>
  <%= f.input :receiver_last_name, label: "Nom du receveur", placeholder: "ex: Villeneuve" %>
  <%= f.input :receiver_phone, label: "Numéro de portable du receveur" %>

  <%= f.association :destination, label: "Destination", collection: pudo_list, label_method: :pudo_city, value_method: :id, include_blank: false  %>
  <!-- <div id="error-title" class="hidden" style="color:#800000;">
    <p>
       #I18n.t(".missions.error-title")
    </p>
  </div> -->

  <div class="text-center">
    <%= f.button :submit, class:'btn navbar-wagon-button'%>
  </div>
<%end%>
